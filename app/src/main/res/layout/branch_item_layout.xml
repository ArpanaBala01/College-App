<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light2"
            android:scrollbars="vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/text_margin"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/br_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_margin"
                    android:src="@drawable/ic_baseline_computer_24"/>

                <TextView
                    android:id="@+id/br_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event name here"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/title_size"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/bold"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/br_image"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/backg"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/br_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aboutCllg"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:textColor="@color/permaBlack"
                android:textSize="@dimen/text_size01"
                android:textAlignment="gravity"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</com.google.android.material.card.MaterialCardView>