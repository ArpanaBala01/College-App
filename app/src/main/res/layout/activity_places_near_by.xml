<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.places_near_by">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLACES NEAR'BY"
            android:layout_marginTop="36dp"
            android:textColor="@color/red"
            android:textSize="@dimen/title_size"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="@color/black"
            android:layout_marginBottom="10dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/acro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acropolis mall- food court, restaurants, movie theater."
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size01"
                    android:fontFamily="@font/light"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/acro"
                    android:scaleType="fitXY"
                    android:cropToPadding="true"/>"

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Science City"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size01"
                    android:fontFamily="@font/light"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/sci"
                    android:scaleType="fitXY"
                    android:cropToPadding="true"/>"

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mani"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mani Square mall"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size01"
                    android:fontFamily="@font/light"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/man"
                    android:scaleType="fitXY"
                    android:cropToPadding="true"/>"

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/urbana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urbana Society"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size01"
                    android:fontFamily="@font/light"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/urbana"
                    android:scaleType="fitXY"
                    android:cropToPadding="true"/>"

            </LinearLayout>

        </androidx.cardview.widget.CardView>





    </LinearLayout>

</ScrollView>